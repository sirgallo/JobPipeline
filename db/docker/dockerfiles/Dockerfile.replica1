FROM mongo:7

RUN apt-get update
RUN apt-get install -y curl

WORKDIR /usr

RUN mkdir ./tls
RUN mkdir ./scripts
RUN mkdir ./configs
RUN mkdir ./data
RUN mkdir ./logs
RUN mkdir ./run

RUN touch ./logs/mongod.log
RUN chmod 700 ./logs/mongod.log

COPY ./db/configs/mongod/mongod.replica1.conf ./configs
COPY ./db/configs/mongo-init.sh ./scripts
RUN chmod 700 ./scripts/mongo-init.sh
COPY ./db/configs/rs-init.sh ./scripts
RUN chmod 700 ./scripts/rs-init.sh

RUN openssl req -newkey rsa:2048 -new -x509 -days 365 -nodes -out ./tls/devdbreplica1.crt -keyout ./tls/devdbreplica1.key \
  -subj "/C=US/ST=MA/L=Boston/O=DevTeam/OU=IT/CN=sirgallo.com" 
RUN cat ./tls/devdbreplica1.key ./tls/devdbreplica1.crt > ./tls/devdbreplica1.pem
RUN chmod 600 ./tls/devdbreplica1.key

EXPOSE 27017

CMD [ "screen", "-S", "initMongo", "-dm", "/usr/bin/mongod", "--bind_ip_all", "--replSet", "dev_replication_set", "--config=/usr/configs/mongod.replica1.conf", "--quiet"]